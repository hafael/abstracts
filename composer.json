{
    "name": "hafael/abstracts",
    "description": "Laravel Abstracts Code Generator",
    "type": "library",
    "authors": [
        {
            "name": "Rafael Villa-Verde",
            "email": "villa655321verde@gmail.com"
        }
    ],
    "license": "Apache-2.0",
    "minimum-stability": "dev",
    "require": {
        "laravel/framework": "^7.4|^8.1|^9.0",
        "league/fractal": "^0.19",
        "hafael/laraflake": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Hafael\\Abstracts\\": "src/"
        },
        "files" : [
            "src/Helpers/functions.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hafael\\Abstracts\\AbstractsServiceProvider"
            ]
        }
    },
    "suggest": {
        "tucker-eric/eloquentfilter": "Allows more advanced eloquent model filters",
        "sofa/eloquence-base": "Needed to support full text search"
    }
}
